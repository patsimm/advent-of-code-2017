{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/",
    "sourceMap": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
